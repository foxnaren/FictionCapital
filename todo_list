Jquery and ajax


https://pragmaticstudio.com/blog/2015/3/18/rails-jquery-ajax


var checkbox = document.getElementById('lightnovel_is_translated');
var details_div = document.getElementById('translated');
checkbox.onchange = function() {
	if(this.checked) {
    	details_div.style['display'] = 'block';
    } else {
    	details_div.style['display'] = 'none';
    }
};



<script>
  $(document).ready(function(){
     if($('#lightnovel_is_translated').val() != true){
        $("#translated-show").css('display','none')
     }
     else{
        $("#my_div").css('display','block')
     }
});

</script>




var translated = document.getElementById('lightnovel_is_translated');
var details_div = document.getElementById('translated');

translated.onchange = function() {
	if(this.checked) {
    	details_div.style['display'] = 'block';
    } else {
    	details_div.style['display'] = 'none';
    }
};


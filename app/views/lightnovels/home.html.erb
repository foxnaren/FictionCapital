<!--<div class = "container">-->
    <div class = "row" id = "jumbotron">
        <div class="col-sm-9 jumbotron container">
            <!-- <div class = "container"> -->
                <!-- <div class="jumbotron"> -->
                    <% if user_signed_in? %>
                        <h1>Welcome back,</h1>
                        <p class="lead" id = "inline">
                            <% if @all_unread_count == 0 %>
                                You are all caught up! <h2><%= link_to "Follow more novels!", lightnovels_path %></h2>
                            <% else %>
                                You have <h2><%= link_to "#{@all_unread_count} chapters", unreads_path %> </h2> waiting for you.
                            <% end %>
                        </p>
                    <% else %>
                        <h1>Welcome, Stranger!</h1>
                        <p class="lead">Sign in or sign before you can access our super sweet,top secret content.</p>
                        <div class = "container">
                            <div class="span6 pull-right">
                                <%= render 'layouts/user_header' %>
                            </div>
                        </div>
                    <% end %>
                <!-- </div> -->
            <!-- </div> -->
        </div>
    	<div class="col-sm-3" id = "mobile">
        	<h3>Message From Theos:</h3>
            <p align="justify">Hope you guys find this site useful. Let me know if you find issues by sending an email at <a>fictioncapital@gmail.com</a></p>
 	    </div>
    </div>
    <div class = "row">
        <div class = "col-sm-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3>Latest Additions:</h3>
                </div>
                <table class="table table-hover table-condensed">
                    <tbody>
                        <% @latest_lightnovels.each do |lightnovel| %>
                            <tr>
                                <td><%= link_to "#{lightnovel.name}", lightnovel %></td>
                                <td>
                                    <%= render "layouts/follow_unfollow", lightnovel_id: lightnovel %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class = "col-sm-4">  
            <div class="panel panel-primary">  
                <div class="panel-heading">
                    <h3>Latest Chapters:</h3>
                </div>
                <table class="table table-hover table-condensed">
<!--                     <thead>
                        <tr>
                            <th>Name</th>
                            <th>New Chapters</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead> -->
                    <tbody>
                        <% @latest_chapters.each do |chapter| %>
                            <tr>
                                <td><%= link_to "#{chapter.lightnovel_name} - #{chapter.chapter_name}", lightnovel_path(id: chapter.lightnovel_id) %></td>
                                <td>
                                    <%= render "layouts/follow_unfollow", lightnovel_id: chapter.lightnovel_id %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class = "col-sm-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3>Most Rated/Visited:</h3>
                </div>
                <table class="table table-hover table-condensed">
                    <tbody>
                        <% @latest_lightnovels.each do |lightnovel| %>
                            <tr>
                                <td><%= link_to "#{lightnovel.name}", lightnovel %></td>
                                <td>
                                    <%= render "layouts/follow_unfollow", lightnovel_id: lightnovel %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>    
    </div>    
</div> 

    

<p>Welcome <%= current_user.email %></p>

<ul>
    <li><%= link_to 'Index', lightnovels_path %></li>
    <li><%= link_to 'Followed Items', lightnovels_path %></li>
    <li><%= link_to 'Unread Chapters', lightnovels_path %></li>
</ul>


<% if @all_unread.blank? %>
    <p>You have read. Consider following more Novels or Manga.</p>
<% else %>
    <% cache @all_unread do %>
        <table>
            <thead>
                <tr>
                    <th>Chapter Number</th>
                    <th>Chapter Name</th>
                    <th>Added On</th>
                    <th>Raws Link</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @all_unread.reverse_each do |unreadchapter| %>
                    <% cache ["single", unreadchapter] do %>
                        <tr>
                            <td><%= unreadchapter.lightnovel_name %></td>
                            <td><%= unreadchapter.chapter_number %></td>
                            <td><%= unreadchapter.chapter_name %></td>
                            <td><%= unreadchapter.created_at.to_date %></td>
                            <td><%= link_to 'Chapter Link', extlink(unreadchapter.chapter_url) %></td>
                            <!--chapter.chapter_url -->
                        </tr>
                    <% end %>
                <% end %>
            </tbody>
        </table>
    <% end %>        
    </p>
<% end %>



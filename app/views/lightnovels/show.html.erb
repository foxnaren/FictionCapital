<% cache @chapters do %>
  <div class = "latest_chapters">
    <p>
      <strong>Latest Chapters : </strong>
      <% (@chapters.first(5)).each do |chapter| %>  
        <%= link_to chapter.chapter_number, extlink(chapter.chapter_url) %>-
        <!--chapter.chapter_url-->
      <% end %>
    </p>
  </div>
  <table>
    <thead>
        <tr>
          <th>Chapter Number</th>
          <th>Chapter Name</th>
          <th>Added On</th>
          <th>Raws Link</th>
          <% if @lightnovel.is_translated == true %>
            <th>Translated Link</th>
          <% end %>
          <th colspan="3"></th>
        </tr>
     </thead>
     
     <tbody>
        <% @chapters.reverse_each do |chapter| %>
          <% cache ["single", chapter] do %>
              <tr>
                <td><%= chapter.chapter_number %></td>
                <td><%= chapter.chapter_name %></td>
                <td><%= chapter.created_at.to_date %></td>
                <td><%= link_to 'Chapter Link', extlink(chapter.chapter_url) %></td>
                <!--chapter.chapter_url -->
                <% if @lightnovel.is_translated == true %>
                  <td><%= link_to 'Raws Link', extlink(chapter.raws_url) %></td>
                  <!--chapter.raws_url-->
                <% end %>
              </tr>
          <% end %>
        <% end %>
      </tbody>
  </table>
<% end %>